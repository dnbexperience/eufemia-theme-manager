{
  "name": "eufemia-theme-manager-extension",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "yarn concurrently 'rimraf ./dist-chrome/*' 'rimraf ./dist-firefox/*'",
    "start": "webpack serve",
    "build": "yarn build:zip",
    "build:zip": "rimraf ./dist-chrome/ && yarn build:chrome && web-ext build --source-dir ./dist-chrome/ --filename eufemia_theme_manager-latest.zip  --overwrite-dest",
    "build:app": "webpack build",
    "build:watch": "nodemon --exec 'NODE_ENV=development yarn build:chrome' --watch 'src/*' --watch '*.js' --ignore 'dist-chrome/*' --ignore 'dist-firefox/*'",
    "build:watch:firefox": "nodemon --exec 'yarn build:firefox' --watch 'src/*' --ignore 'dist-chrome/*' --ignore 'dist-firefox/*'",
    "build:chrome": "RUNTIME_BROWSER=chrome yarn concurrently 'yarn build:copy' 'yarn build:app'",
    "build:firefox": "RUNTIME_BROWSER=firefox yarn concurrently 'yarn build:copy' 'yarn build:app'",
    "build:copy": "./script/copy_files.sh",
    "start:firefox": "web-ext run --source-dir ./dist-firefox/"
  },
  "dependencies": {
    "@emotion/cache": "^11.1.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "classnames": "^2.2.6",
    "color": "^3.1.3",
    "dnb-ui-lib": "^8.4.2",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "web-vitals": "^1.1.1",
    "zustand": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "css-loader": "^5.2.0",
    "dotenv": "^8.2.0",
    "esbuild-loader": "^2.11.0",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "mini-css-extract-plugin": "^1.4.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "web-ext": "^6.0.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  }
}
