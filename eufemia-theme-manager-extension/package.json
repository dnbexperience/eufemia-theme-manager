{
  "name": "eufemia-theme-manager-extension",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "react-app-rewired test",
    "start": "react-app-rewired start",
    "build:default": "react-app-rewired build",
    "build:watch": "nodemon --exec 'yarn build:chrome' --watch 'src/*' --ignore 'dist-chrome/*' --ignore 'dist-firefox/*'",
    "build:watch:firefox": "nodemon --exec 'yarn build:firefox' --watch 'src/*' --ignore 'dist-chrome/*' --ignore 'dist-firefox/*'",
    "build:chrome": "REACT_APP_BROWSER=chrome yarn concurrently 'yarn build:react' 'yarn build:extension'",
    "build:firefox": "REACT_APP_BROWSER=firefox yarn concurrently 'yarn build:react' 'yarn build:extension'",
    "build:react": "./script/build.sh react",
    "build:extension": "./script/build.sh extension",
    "start:firefox": "web-ext run --source-dir ./dist-firefox/"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@emotion/cache": "^11.1.3",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "classnames": "^2.2.6",
    "color": "^3.1.3",
    "dnb-ui-lib": "^8.0.1",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "web-vitals": "^1.0.1",
    "zustand": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@emotion/babel-plugin": "^11.1.2",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "concurrently": "^5.3.0",
    "customize-cra": "^1.0.0",
    "nodemon": "^2.0.7",
    "react-app-rewired": "^2.1.8",
    "rollup": "^2.36.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-replace": "^2.2.0",
    "web-ext": "^5.4.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
